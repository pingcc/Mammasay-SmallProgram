


.ClassifyProductListPage_ContainerView{
  height: 100%;
  width: 100%;
  margin: 0 auto; 
  background: #f3f3f3;
}

.ClassifyProductListPage_TopView{
  height: 45px;
  margin-top: 0px;
  width: 100%;
  margin-left: 0;
  background: white;
  flex-wrap: nowrap;
  display: flex;
  align-items: center;
}

.ClassifyProductListPage_TopText{
  font-size: 12px;
  font-weight: lighter;
  width: 25%;
  align-self: center;
  text-align: center;
  line-height: 45px;
  color: #333333;
}

.ClassifyProductListPage_itemContainerView{
  width: 100%;
  height: calc(100% - 45px);
  background: #f3f3f3;
  flex-wrap: wrap;

}

.ClassifyProductListPage_item_subContainer{
  margin-left: 6px;
  margin-right: 8px;
  margin-top: 0px;
  height: 100%;
  width: 95%;
  background: white;
  display: flex;
  flex-wrap: wrap;
  position: relative;
  justify-content: center;
}

.ClassifyProductListPage_item{
  margin-top: 6px;
  width: 50%;
  height: 200px;
  background: #f3f3f3;
  float: left;
}

.ClassifyProductListPage_item_image{
  /* margin-left: 6px;
  margin-right: 6px; */
  height: 130px;
  width: 70%;
  background: white;
  align-self: center;
}

.ClassifyProductListPage_item_Score{
  margin-top: 2px;
  margin-left: 0px;
  margin-right: 0px;
  height: 65px;
  background: white;
  width: 100%;
}

.ClassifyProductListPage_item_Score_caver{
  margin-top: 0;
  height: 1px;
  background: #f3f3f3;
  width: 100%;
}

.ClassifyProductListPage_item_Score_sup{
    height: 85%;
    margin-left: 6px;
    margin-right: 6px;
    line-height: 14px;
}

.ClassifyProductListPage_item_Score_text{
  margin-top: 0px;
  border-radius: 2px;
  border-color: #2f88ff;  
  font-size: 10px;
  color: #2f88ff;
  font-weight: lighter; 
  border:1px solid;
  line-height: 12px;
}

.ClassifyProductListPage_item_Score_subTitle{
  line-height: 12px;
  font-size: 12px;
  color: #333333;
  font-weight: lighter; 
  max-height: 40px;
  margin-left: 2px;
}

.ClassifyProductListPage_item_ScoreNumber_Container{
  margin-top: 2px;
  margin-left: 0px;
  height: 20px;
  color: #2f88ff;
  display: flex;
  align-items: center;
}

.ClassifyProductListPage_item_ScoreNumber{
  font-size: 12px;
  line-height: 14px;
  margin-top: 0px;
}