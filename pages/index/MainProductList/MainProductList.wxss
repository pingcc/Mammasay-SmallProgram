}

.Product_text{
  margin-top: 0px;
  border-radius: 2px;
  border-color: #2f88ff;  
  font-size: 10px;
  color: #2f88ff;
  font-weight: lighter; 
  border:1px solid;
  line-height: 12px;
}

.ProductsubTitle{
  line-height: 12px;
  font-size: 12px;
  color: #333333;
  font-weight: lighter; 
  max-height: 40px;
  margin-left: 2px;
}

.ProductScoreNumberContainer{
  margin-top: 2px;
  margin-left: 0px;
