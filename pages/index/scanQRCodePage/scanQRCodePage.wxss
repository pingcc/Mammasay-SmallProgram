.topsearchContainerView{
  height: 45px;
  width: 100%;
  background: white;
  justify-content: center;
  display: flex;
  flex-wrap: nowrap; 
  align-items: center; 
}

.searchContainer{
  margin-left: 0px;
  width: calc(100% - 40px);
  height: 30px;
  /* display: flex; */
