  align-self: center;
  align-items: center;
  flex-wrap: nowrap;
  display: flex;
  flex-direction: row-reverse;
  border-radius: 15px;
  border: 0 solid;
}

.manualInputScanQRCodeView{
  float: right;
  height: 100%;
  width: 30%;
  background: rgba(18, 136, 256, 0.5);
  border-radius: 15px;
  border: 0 solid;
  text-align: center;
  font-size: 12px;
  color: white;
  line-height: 30px;
}

.manualInputView{
  width: 58%;
  margin-right: 10%;
  height: 28px;
  align-self: center;
}

.manualInput{
  font-size: 12px;
  color: #333333;
}

.scanContainer{
  width: 100%;
  height: calc(100% - 45px);
  align-items: center;
  justify-content: center;
  display: flex;
}

.scanView{
  align-self: center;
